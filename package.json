{
  "name": "affiliate-next-orchestrator",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "check-types": "pnpm -r check-types",
    "dev:native": "pnpm --filter native dev",
    "dev:web": "pnpm --filter web dev",
    "dev:server": "pnpm --filter @affiliate-next-orchestrator/backend dev",
    "dev:setup": "pnpm --filter @affiliate-next-orchestrator/backend dev:setup"
  },
  "packageManager": "pnpm@10.11.0"
}
